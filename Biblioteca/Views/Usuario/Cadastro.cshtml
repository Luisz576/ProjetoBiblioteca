@model Usuario
@{
    ViewData["Title"] = "Cadastro de usuarios";
}

<h1 class="row justify-content-md-center">Cadastro de Usuarios</h1>
    @if(ViewBag.erro != null){
        <h2>
            @ViewBag.erro
        </h2>
    }
<div class="row justify-content-md-center">
    <form asp-action="Cadastro" method="POST" class="col-md-4">
        <fieldset>
            <legend>Usuario</legend>
            <div class="form-group">
                <label asp-for="User">Usuario</label>
                <input asp-for="User" class="form-control"/>
            </div>
            <div class="form-group">
                <label asp-for="Senha">Senha</label>
                <input asp-for="Senha" class="form-control"/>
            </div>
        </fieldset>
        <input type="submit" value="Salvar" class="btn btn-primary"/>
    </form>
</div>