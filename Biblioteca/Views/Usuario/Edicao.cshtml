@model Usuario
@{
    ViewData["Title"] = "Edição de Usuario";
}

<h1 class="row justify-content-md-center">Edição de Usuario</h1>
<div class="row justify-content-md-center">
    <form asp-action="Cadastro" method="POST" class="col-md-4">
        <input type="hidden" asp-for="Id"/>
        <fieldset>
            <legend>Usuario</legend>
            <div class="form-group">
                <label asp-for="User">Usuario</label>
                <input asp-for="User" class="form-control"/>
            </div>
            <div class="form-group">
                <label asp-for="Senha">Nova senha</label>
                <input asp-for="Senha" class="form-control"/>
            </div>
        </fieldset>
        <input type="submit" value="Salvar" class="btn btn-primary"/>
    </form>
</div>